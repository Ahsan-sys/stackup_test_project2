<h1>Plan Show Page														
	<%if current_user.type=="Admin"%>
		<%=link_to "Create Feature", new_user_plan_feature_path(current_user.id,params[:id]), class: "btn btn-secondary "%>
	<%end%>
</h1>


<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Feature Limit</th>
      <th>Feature Price</th>
      <%if current_user.type=="Admin"%>
      	<th>Edit Feature</th>
      <%end%>

      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>


  <tbody>
    
		
	<%@plan.features.each do |pf|%>
	<tr>
		<td><%=pf.name%></td>
		<td><%=pf.code%></td>
		<td><%=pf.limit%></td>
		<td><%=pf.price%></td>
		<%if current_user.type=="Admin"%>
      	<td><%=link_to "Edit Feature", edit_user_plan_feature_path(current_user.id,params[:id],pf.id)%></td>
    <%end%>
		
	</tr>
	<%end%>
		

  
  </tbody>
</table>

